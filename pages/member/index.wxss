/* pages/member/index.wxss */
.info {
  display: flex;
  flex-direction: column;
  padding: 80rpx 0;
  align-items:center;
}

.info .image{
  height: 186rpx;
  width: 186rpx;
  line-height: 186rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #2ecc71;
  color: #fff;
  position: relative;
}

.info .hiddenbtn {
  opacity: 0;
  position: absolute;
  top: 0;
}

.info text {
  margin-top: 50rpx;
  font-size: 40rpx;
}

.option_box {
  background-color: #fff;
  padding: 0 20rpx;
}

.option_item {
  display: flex;
  padding: 25rpx 0 25rpx 30rpx;
  font-size: 34rpx;
}

.option_item .left {
  flex: 1;
}

.option_item .right {
  display: flex;
}

.option_item .arrow {
  width: 15rpx;
  height: 15rpx;
  border-top: 4rpx solid #c7c7c7;
  border-right: 4rpx solid #c7c7c7;
  transform: rotate(45deg) translateY(10rpx);
}

.sign_out {
  text-align: center;
  padding: 25rpx 0;
  background-color: #fff;
  margin-top: 40rpx;
  font-size: 34rpx;
}

.option_item .right_text {
  color: #888888;
  font-size: 28rpx;
  line-height: 38rpx; 
  margin-right: 10rpx;
}

.option_item icon {
  margin: 0 10rpx 0 20rpx;
  transform: translateY(4rpx);
}